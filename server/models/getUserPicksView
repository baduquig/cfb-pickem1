db.createView("getAllRenderedData", "picks", [
    {        
        $lookup: {
          from: "getAllGamesView",
          localField: "gameId",
          foreignField: "gameId",
          as: "gameData"
        },

        $lookup: {
          from: "picks",
          localField: "_id",
          foreignField: "gameId",
          as: "picks"
        },

        $project: {
            // 
            gameId: 1,
            week: 1,
            day: 1,
            date: 1,
            finalScore: 1,
            awaySchoolId: 0,
            homeSchoolId: 0,
            location: 1,
            schoolName: 1,
            schoolMascot: 1,
            awaySchoolName: "$awaySchools.schoolName",
            awayMascot: "$awaySchools.schoolMascot",
            homeSchoolName: "$homeSchools.schoolName",
            homeMascot: "$homeSchools.schoolMascot",
        }
    }
]);